<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialYou" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="lightColor">@color/barvinok_pervansh</item>
        <item name="darkColor">@color/aspid_blue</item>
        <item name="textViewTextColor">@color/black</item>
    </style>

    <style name="MonoTheme" parent="Theme.MaterialYou">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_grey</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/bebasneueregular</item>
        <item name="lightColor">@color/light_grey</item>
        <item name="darkColor">@color/dark_grey</item>
        <item name="textViewTextColor">@color/black</item>
    </style>

    <style name="GreenTheme" parent="Theme.MaterialYou">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amazon_green_light</item>
        <item name="colorPrimaryVariant">@color/amazon_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/amazon_green</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/gnyrwn971</item>
        <item name="lightColor">@color/amazon_green_light</item>
        <item name="darkColor">@color/amazon_green</item>
        <item name="textViewTextColor">@color/black</item>
    </style>

</resources>