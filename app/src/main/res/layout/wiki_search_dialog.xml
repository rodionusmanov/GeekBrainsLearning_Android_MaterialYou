<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wiki_search_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wiki_dialog_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:hint="@string/wiki_hint"
        app:endIconCheckable="true"
        app:endIconDrawable="@android:drawable/ic_search_category_default"
        app:endIconMode="custom"
        app:endIconTint="@color/black"
        app:startIconCheckable="false"
        app:startIconDrawable="@drawable/wiki_icon_input_layout"
        app:startIconTint="?attr/darkColor">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/wiki_dialog_input_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>