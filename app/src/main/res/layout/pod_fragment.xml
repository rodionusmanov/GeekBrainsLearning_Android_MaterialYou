<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pod_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PODFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wiki_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:hint="@string/wiki_hint"
            app:endIconCheckable="true"
            app:endIconDrawable="@android:drawable/ic_search_category_default"
            app:endIconMode="custom"
            app:endIconTint="@color/black"
            app:startIconCheckable="false"
            app:startIconDrawable="@drawable/wiki_icon_input_layout"
            app:startIconTint="@color/aspid_blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/wiki_input_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.example.materialyou.utils.EquilateralImageView
            android:id="@+id/pod_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@id/wiki_input_layout" />

    </LinearLayout>

    <include layout="@layout/bottom_sheet_layout" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/pod_bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/aspid_blue"
        app:navigationIcon="@android:drawable/ic_menu_sort_by_size"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleMargin="4dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pod_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_700"
        app:layout_anchor="@id/pod_bottom_app_bar"
        app:srcCompat="@android:drawable/ic_menu_add"
        app:tint="@color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>